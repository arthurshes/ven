<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shops.ShopName">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ImageMagLogo"
        android:layout_width="255dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/plusfata"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031"
        app:riv_border_color="@color/gray"
        app:riv_border_width="2dip"
        app:riv_corner_radius="30dip" />

    <EditText
        android:id="@+id/edit_magname"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_input_desigb"
        android:backgroundTint="@color/gray"
        android:hint="Введите название магазина"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.378" />

    <EditText
        android:id="@+id/edit_number"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_input_desigb"
        android:backgroundTint="@color/gray"
        android:hint="Введите контактный номер"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.477" />

    <TextView
        android:id="@+id/categ_mag"
        android:layout_width="361dp"
        android:layout_height="62dp"
        android:background="@drawable/textview_design"
        android:backgroundTint="@color/gray"
        android:gravity="center"
        android:text="Категория вашего магазина"
android:hint="Online"
        android:textColor="@color/i"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/number_text"
        android:layout_width="361dp"
        android:layout_height="62dp"
        android:background="@drawable/textview_design"
        android:backgroundTint="@color/gray"
        android:gravity="center"

android:visibility="invisible"
        android:textColor="@color/i"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485" />

    <EditText
        android:id="@+id/edit_adress"
        android:layout_width="361dp"
        android:layout_height="62dp"
        android:background="@drawable/textview_design"
        android:backgroundTint="@color/gray"
        android:gravity="center"
        android:hint="Адрес"

        android:textColor="@color/i"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.732" />

    <EditText
        android:id="@+id/edit_city"
        android:layout_width="361dp"
        android:layout_height="62dp"
        android:background="@drawable/textview_design"
        android:backgroundTint="@color/gray"
        android:gravity="center"
        android:hint="Город"

        android:textColor="@color/i"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597"
        app:srcCompat="@drawable/birka" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="349dp"
        android:id="@+id/button_magreg"
        android:layout_height="61dp"
        android:background="@drawable/button_activ_design"
        android:backgroundTint="@color/darkgreen"
        android:text="Зарегистрироваться"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961" />
</androidx.constraintlayout.widget.ConstraintLayout>